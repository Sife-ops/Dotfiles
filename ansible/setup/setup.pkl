import "@ansipkl/Playbook.pkl"
// import "@ansipkl/AnsibleBuiltin.pkl"
import "@ansipkl/CommunityGeneral.pkl"

setup_00_pb = new Listing<Playbook.Play> {
    new {
        name = "play_20X6"
        hosts = "self"
        remote_user = "root"

        tasks {
            new CommunityGeneral.Pacman {
                name = "packages"
                options {
                    name { 
                        "neovide" 
                        "ttf-iosevka-nerd"
                        "ttf-terminus-nerd"
                        "otf-ipafont"
                    }
                }
            }.into()
        }
    }
}


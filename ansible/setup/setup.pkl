import "@ansipkl/playbook.pkl"
import "@ansipkl/builtin.pkl"
import "@ansipkl/community.general.pkl"

setup_00_pb = new Listing<playbook.play> {
    new {
        name = "play_00"
        hosts = "self"
        remote_user = "root"

        tasks {
            new `community.general`.pacman {
                name = "packages"
                options {
                    name { 
                        "neovide" 
                        "ttf-iosevka-nerd"
                        "ttf-terminus-nerd"
                        "otf-ipafont"
                    }
                }
            }.into()
        }
    }
}


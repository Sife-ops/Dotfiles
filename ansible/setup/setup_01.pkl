import "@Ansible/Ansible.pkl"

plays {
    new Ansible.Play {
        name = "example"
        hosts = "self"
        remote_user = "root"

        tasks = List(
            new Ansible.TaskPacman {
                name = "neovide"
                `community.general.pacman` = new Ansible.Pacman {
                    name = "neovide"
                }
            },
            new Ansible.TaskPacman {
                name = "ipafont"
                `community.general.pacman` = new Ansible.Pacman {
                    name = "otf-ipafont"
                }
            }
        )
    }
}

#^ view
map . set hidden!
map <c-r> reload
#$

#^ actions
map <c-c> fzfcd
map <c-d> $nvim -d $fx
map <c-n> push :mkdir<space>
map <c-s> $ln -sf $fs ./
map <c-t> push :$touch<space>
map <c-w> $setwallpaper.sh $f
map D &dragon-drag-and-drop $fx
map E $$ALTEDITOR ./
map r $vidir
map s $$EDITOR -S $f
map u preview
map x extract
#$

#^ git
map gap $git add -p $fx
map gb !git branch
map gch push :!git<space>checkout<space>
map gcm push :!git<space>commit<space>-m<space>" #"
map gg $tig
map gs $tig status
#$

#^ trash-cli
map t
map te $trash-empty
map tl !trash-list
map tp $trash-put $f
map tr $trash-restore
#$

# vim: ft=sh fdm=marker fmr=#^,#$
